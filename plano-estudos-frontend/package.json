{
  "name": "plano-de-estudos-app",
  "private": true,
  "version": "1.0.3",
  "description": "Um planejador de estudos inteligente para otimizar sua rotina.",
  "author": "Adrielle",
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "backend": "../plano-estudos-backend/venv/bin/python ../plano-estudos-backend/app.py",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run backend\" \"wait-on tcp:5173 && electron .\"",
    "dist": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.meuapp.planodeestudos",
    "productName": "Plano de Estudos Inteligente",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/renderer/**/*",
      "electron.cjs"
    ],
    "extraResources": [
      {
        "from": "../plano-estudos-backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!venv",
          "!venv/**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Education"
    }
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  }
}
